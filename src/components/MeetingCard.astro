---
import { FiCalendar } from 'react-icons/fi';
---

<section class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="max-w-4xl mx-auto">
    <a
      href="https://cal.com/saiyerniakhil/15min"
      target="_blank"
      rel="noopener noreferrer"
      class="block group"
    >
      <div class="p-8 rounded-lg border bg-card hover:bg-accent transition-all duration-300 hover:shadow-lg hover:scale-[1.02]">
        <div class="flex flex-col sm:flex-row items-center gap-6">
          <div class="flex-shrink-0">
            <div class="w-16 h-16 rounded-full bg-primary-500/10 dark:bg-primary-500/20 flex items-center justify-center group-hover:scale-110 transition-transform">
              <FiCalendar className="w-8 h-8 text-primary-600 dark:text-primary-500" />
            </div>
          </div>
          <div class="flex-1 text-center sm:text-left">
            <h2 class="text-2xl font-bold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-500 transition-colors">
              Meet with Me
            </h2>
            <p class="text-muted-foreground">
              Schedule a 15-minute chat to discuss projects, opportunities, or just say hi!
            </p>
          </div>
          <div class="flex-shrink-0">
            <span class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary-600 dark:bg-primary-500 text-white font-medium group-hover:bg-primary-700 dark:group-hover:bg-primary-600 transition-colors">
              Schedule Now
              <svg
                class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                ></path>
              </svg>
            </span>
          </div>
        </div>
      </div>
    </a>
  </div>
</section>
